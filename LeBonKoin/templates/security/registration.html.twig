{% extends 'base.html.twig' %}

{% block body %}
	<h1>Inscription</h1>
	{{form_start(form)}}

	{{form_row(form.username{'label':{'Nom d'utilisateur', 'attr':{'placeholder':'Nom utilisateur...'}}})}}
	{{form_row(form.email{'label':{'Adresse email', 'attr':{'placeholder':'Adresse Email...'}}})}}
	{{form_row(form.password{'label':{'Mot de passe', 'attr':{'placeholder': 'Mot de passe...'}}})}}
	{{form_row(form.confirm_password{'label':{'Confirm Mot de passe', 'attr':{'placeholder': 'Repeter Mot de passe...'}}})}}
	<button type="submit" class="btn btn-sucess">Inscription</button>
	{{form_end(form)}}
{% endblock %}